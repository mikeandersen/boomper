{
  "name": "boomper",
  "version": "1.0.0",
  "description": "A GitHub app that bumps version numbers in readmes",
  "author": "Tim Lucas <t@toolmantim.com> (https://github.com/toolmantim)",
  "license": "ISC",
  "repository": "https://github.com/toolmantim/boomper.git",
  "scripts": {
    "dev": "nodemon --exec \"npm start\"",
    "start": "probot run ./index.js",
    "now-start": "PRIVATE_KEY=$(echo $PRIVATE_KEY_BASE64 | base64 -d) npm start",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "deploy": "now && now alias"
  },
  "dependencies": {
    "compare-versions": "3.3.0",
    "probot": "6.2.1",
    "probot-config": "0.1.0",
    "request": "2.87.0"
  },
  "devDependencies": {
    "jest": "23.2.0",
    "nock": "9.3.3",
    "nodemon": "1.17.5",
    "smee-client": "1.0.2",
    "standard": "11.0.1"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "index.js",
      "lib/**"
    ]
  }
}
